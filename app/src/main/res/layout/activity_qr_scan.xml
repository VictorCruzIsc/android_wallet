<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/bitso_logo"
        android:layout_marginTop="85dp"
        android:id="@+id/bitsoLogo"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="@string/scan"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanCredentialsBtn"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/bitsoLogo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/continue_to_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanCredentialsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/continueToActivityTV"/>
</RelativeLayout>